---
const { title, description, link, calltoAction, image } = Astro.props;
---

<div class="md:w-1/2 lg:w-1/3 py-4 px-4">
<a href={link}>
 
    <div
      class="bg-whitegray relative shadow p-2 rounded-lg text-gray-800 hover:shadow-lg
      hover:scale-110 transition duration-200 delay-100 align-middle"
    >
    <div class="flex justify-center">
        <img
          src=`${image}` 
          class="rounded-full -mt-10 border-4 object-center object-cover border-white mr-2 h-16 w-16"
        />
      </div>
      <div class="py-2 px-2">
        <div class="font-bold font-title text-center"><h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-800">
            {title}
          </h5></div>

        <div class=" text-center my-2">
            <p class="mb-1 font-medium text-gray-700">{description}.</p>

            <button
          class="mt-4 bg-accentligth hover:bg-accent text-whitegray font-bold py-2 px-4 rounded-2xl leading-relaxed"
          >{calltoAction}</button
        >
        </div>
      </div>
       
    </div> 
</a>
