---
const {title, description, link} = Astro.props
---
<div class="p-2 max-w-sm">
    <div class="flex rounded-lg min-h-52 w-96 bg-gray-200 p-8 hover:scale-110 transition 
    duration-200 delay-100 hover:bg-gray-400 flex-col">
    
    

    <a href={link}>
        <h5 class="mb-2 text-2xl font-semibold tracking-tight text-black">{title}</h5>
    </a>
    <p class="mb-3 font-medium text-gray-500 dark:text-gray-600">{description}.</p>
    
</div>
</div>